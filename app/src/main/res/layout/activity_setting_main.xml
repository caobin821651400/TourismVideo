<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3D3D3D">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="19sp" />
    </RelativeLayout>
    <!--第1个-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_setting_ll_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_wifi"
                android:drawablePadding="15dp"
                android:text="非WIFI下提醒我"
                android:textColor="#5a5a5a"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/checkbox_is_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp" />

        </LinearLayout>

        <include layout="@layout/line_setting" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_wifi"
                android:drawablePadding="15dp"
                android:text="WIFI下自动播放视频"
                android:textColor="#5a5a5a"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/checkbox_auto_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp" />

        </LinearLayout>


    </LinearLayout>
    <!--第二个-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_setting_ll_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_msg"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_wifi"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/icon_right_more"
            android:gravity="center_vertical"
            android:text="我的消息"
            android:textColor="#5a5a5a"
            android:textSize="15sp" />

        <include layout="@layout/line_setting" />

        <TextView
            android:id="@+id/tv_check_version"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_wifi"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/icon_right_more"
            android:gravity="center_vertical"
            android:text="检查更新"
            android:textColor="#5a5a5a"
            android:textSize="15sp" />

        <include layout="@layout/line_setting" />


        <TextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_wifi"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/icon_right_more"
            android:gravity="center_vertical"
            android:text="分享给好友"
            android:textColor="#5a5a5a"
            android:textSize="15sp" />

    </LinearLayout>
    <!--第3个-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_setting_ll_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_wifi"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/icon_right_more"
            android:gravity="center_vertical"
            android:text="版本信息"
            android:textColor="#5a5a5a"
            android:textSize="15sp" />

        <include layout="@layout/line_setting" />

        <TextView
            android:id="@+id/tv_opinion"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_wifi"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/icon_right_more"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:textColor="#5a5a5a"
            android:textSize="15sp" />

        <include layout="@layout/line_setting" />


        <TextView
            android:id="@+id/tv_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_wifi"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/icon_right_more"
            android:gravity="center_vertical"
            android:text="清理缓存"
            android:textColor="#5a5a5a"
            android:textSize="15sp" />

    </LinearLayout>
    <!--第4个-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_setting_ll_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_account_safe"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_wifi"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/icon_right_more"
            android:gravity="center_vertical"
            android:text="账号安全"
            android:textColor="#5a5a5a"
            android:textSize="15sp" />

        <include layout="@layout/line_setting" />

        <TextView
            android:id="@+id/tv_contact_us"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_wifi"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/icon_right_more"
            android:gravity="center_vertical"
            android:text="联系我们"
            android:textColor="#5a5a5a"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#dddddd" />

    <TextView
        android:id="@+id/btn_sign_out"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#5a5a5a"
        android:textSize="16sp" />
</LinearLayout>
