<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <include layout="@layout/common_setting_header" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="为了提高账号安全，建议您绑定手机号"
        android:textColor="#555555"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape_edit_3dp_bg"
        android:digits="@string/digs_phone"
        android:hint="请输入您的手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:padding="12dp"
        android:textColor="#555555"
        android:textColorHint="#d8d8d8"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_msg_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_3dp_bg"
            android:digits="@string/digs_phone"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:padding="12dp"
            android:textColor="#555555"
            android:textColorHint="#d8d8d8"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_send_msg_code"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_send_msg_code_bg"
            android:gravity="center"
            android:minWidth="93dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_next_step_bg"
        android:text="下一步"
        android:textColor="#ffffff" />
</LinearLayout>
